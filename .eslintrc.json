{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "react-app/jest"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "unused-imports"
    ],
    "rules": {
        "no-mixed-spaces-and-tabs": 1,
        "indent": ["error", 2],
        "unused-imports/no-unused-imports": "warn",
        "unused-imports/no-unused-vars": [
			"warn",
			{ "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
		]
    }
}
